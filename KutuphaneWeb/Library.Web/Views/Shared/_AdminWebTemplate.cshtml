@{
    User user = (User)Session["User"];
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title> @ViewBag.Title </title>
    <link rel="shortcut icon" href="~/Content/Resimler/Template/Title.png" />

    <link rel="stylesheet" href="/Content/AdminTemplate/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Content/AdminTemplate/dist/css/adminlte.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/Content/AdminTemplate/plugins/iCheck/flat/blue.css">
    <!-- Morris chart -->
    <link rel="stylesheet" href="/Content/AdminTemplate/plugins/morris/morris.css">
    <!-- jvectormap -->
    <link rel="stylesheet" href="/Content/AdminTemplate/plugins/jvectormap/jquery-jvectormap-1.2.2.css">
    <!-- Date Picker -->
    <link rel="stylesheet" href="/Content/AdminTemplate/plugins/datepicker/datepicker3.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="/Content/AdminTemplate/plugins/daterangepicker/daterangepicker-bs3.css">
    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="/Content/AdminTemplate/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/AdminTemplate/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/AdminTemplate/dist/css/adminlte.min.css">
    @RenderSection("Head", false)
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini" style="font-family:'Times New Roman';">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand bg-dark navbar-light border-bottom">
            <!-- Right navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars" style="color:#ffc107;"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Admin/Index" class="nav-link">Anasayfa</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="" style="color:black;">
                        Merhaba, @user.name @user.surname &nbsp;
                        <img src="~/Content/Photograph/User/@user.imageName" width="30" height="30" class="img-circle" alt="User Image">
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right bg-dark">
                        <div class="dropdown-footer">
                            <!-- Message Start -->
                            <div class="media">
                                <img src="~/Content/Photograph/User/@user.imageName" alt="User Image" class="img-circle" width="50" height="50">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title" style="font-weight:bold;margin-top:5%;">
                                        @user.name @user.surname
                                    </h3>
                                </div>
                            </div>
                            <!-- Message End -->
                        </div>
                        <a href="/Admin/MyProfile" class="dropdown-item">
                            <!-- Message Start -->
                            <div class="media">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title" style="color:white;font-weight:bold;">
                                        Profilim
                                        <span class="float-right text-sm text-muted"><i class="fa fa-user" style="color:#ffc107;"></i></span>
                                    </h3>
                                </div>
                            </div>
                            <!-- Message End -->
                        </a>
                        <a href="/Admin/Logout" class="dropdown-item">
                            <!-- Message Start -->
                            <div class="media">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title" style="color:#ffc107;font-weight:bold;">
                                        Çıkış Yap
                                        <span class="float-right text-sm text-muted"><i class="fa fa-sign-out" style="color:#ffc107;"></i></span>
                                    </h3>
                                </div>
                            </div>
                            <!-- Message End -->
                        </a>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-dark elevation-4 bg-dark">
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Content/Photograph/User/@user.imageName" class="img-circle elevation-2" style="width:40px;height:40px;" />
                    </div>
                    <div class="info" style="padding-top:4%;">
                        <a class="d-block">@user.name @user.surname</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="/Admin/Index" class="nav-link">
                                <i class="nav-icon fa fa-home" style="color:#ffc107;"></i>
                                <p>
                                    Anasayfa
                                </p>
                            </a>
                        </li>
                        @if (user.authorizationID != 2)
                        {
                            <li class="nav-item">
                                <a href="/Loan/Index" class="nav-link">
                                    <i class="nav-icon fa fa-plus" style="color:#ffc107;"></i>
                                    <p>
                                        Kitap Ödünç Verme
                                    </p>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a href="/Reserve/Index" class="nav-link">
                                <i class="nav-icon fa fa-file-text" style="color:#ffc107;"></i>
                                <p>
                                    Rezerve Edilmiş Kitaplar
                                </p>
                            </a>
                        </li>
                        @if (user.authorizationID != 2)
                        {
                            <li class="nav-item">
                                <a href="/TakeBackBook/Index" class="nav-link">
                                    <i class="nav-icon fa fa-check" style="color:#ffc107;"></i>
                                    <p>
                                        Kitap Geri Alma
                                    </p>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a href="/PastLoan/Index" class="nav-link">
                                <i class="nav-icon fa fa-list" style="color:#ffc107;"></i>
                                <p>
                                    Geçmiş Ödünç Kayıtları
                                </p>
                            </a>
                        </li>
                        @if (user.authorizationID != 2)
                        {
                            <li class="nav-item">
                                <a href="/Book/Index" class="nav-link">
                                    <i class="nav-icon fa fa-book" style="color:#ffc107;"></i>
                                    <p>
                                        Kitap İşlemleri
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/User/Index" class="nav-link">
                                    <i class="nav-icon fa fa-user" style="color:#ffc107;"></i>
                                    <p>
                                        Kullanıcı İşlemleri
                                    </p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@RenderSection("Header", false)</h1>
                        </div>
                    </div>
                </div>
            </section>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row" style="margin-top:20px;">
                        @RenderBody()
                        <!-- /.col-md-6 -->
                    </div>
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>

            <!-- /.content -->
        </div>

        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="/Content/AdminTemplate/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/Content/AdminTemplate/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/Content/AdminTemplate/dist/js/adminlte.min.js"></script>
    @RenderSection("Script", false)
</body>
</html>
